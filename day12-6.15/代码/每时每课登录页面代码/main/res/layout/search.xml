<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp"
>
<TextView
    android:text="年级"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/chuyi"
            android:text="初一"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="初二"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="初三"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="高二"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="高三"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
    </RadioGroup>
    <TextView
        android:text="学科"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:transitionName="学科"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:text="语文"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="数学"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="英语"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="物理"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
        <RadioButton
            android:text="化学"
            android:layout_marginLeft="5dp"
            android:background="@color/grey"
            android:gravity="center"
            android:button=" @null"
            android:layout_width="78dp"
            android:layout_height="30dp"/>
    </RadioGroup>
</LinearLayout>